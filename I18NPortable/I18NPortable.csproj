<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageId>I18nPortable.ATC</PackageId>
    <Version>1.0.3</Version>
    <Authors>Diego Ponce de Leon, Daniel Galvão</Authors>
    <Company>atypical-coder</Company>
    <PackageLicense>https://github.com/atypical-coder/I18N-Portable/blob/master/LICENSE</PackageLicense>
    <Description>Simple cross platform internationalization/translations for Xamarin and Windows apps</Description>
    <PackageTags>I18N, Internationalization, Translations, Xamarin, Xamarin.Forms, Mvvm, Xamarin.iOS, Xamarin.Android, iOS, Android, UWP, Windows Universal</PackageTags>
    <PackageReleaseNotes>Relase notes at https://github.com/xleon/I18N-Portable/releases</PackageReleaseNotes>
    <PackageProjectUrl>https://github.com/atypical-coder/I18N-Portable</PackageProjectUrl>
    <RepositoryUrl>https://github.com/atypical-coder/I18N-Portable</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <NeutralLanguage>en</NeutralLanguage>
    <LangVersion>latestmajor</LangVersion>
    <PackageOutputPath>./nupkg</PackageOutputPath>
  </PropertyGroup>

</Project>